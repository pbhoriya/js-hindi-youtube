const name="user"
const surname="group"

console.log(name+ surname) //not a good practice
console.log(`Hello my name is ${name} and my surname is ${surname}.`) // modern way

const gamename = new String('usergroup')//another way of declaring string through object
console.log(gamename)
console.log(gamename.__prot__);
console.log(gamename.length);
console.log(gamename.charAt(2));
console.log(gamename.indexOf('g'));
console.log(gamename.toUpperCase());// stack h isliye original value change nahi hogi

//Breaking string into substring
const newstring= gamename.substring(0,4)
console.log(newstring)

const anothersting=gamename.slice(-9,4) // neagative value bhi de skte h
console.log(anothersting)

const newstring1="    user    ";
console.log(newstring1);
console.log(newstring1.trim());//extra whitespaces ko delete krta h

const url='https://user/user%20group'
console.log(url.replace('%20','-'))

const astring='user-group'
console.log(astring.split('-'))





